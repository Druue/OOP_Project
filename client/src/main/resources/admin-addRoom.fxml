                        <Menu mnemonicParsing="false" text="Reserve">
                            <items>
                                <MenuItem onAction="#goToRes" text="Room" />
                                <MenuItem mnemonicParsing="false" text="Bike" />
                            </items>
                        </Menu>
                        <Menu text="Manage buildings">
                            <MenuItem onAction="#goToBuildings" text="View all buildings" />
                            <MenuItem onAction="#goToAddBuildings" text="Add building" />
                            <MenuItem mnemonicParsing="false" text="Edit buildings" />
                        </Menu>
                        <Menu mnemonicParsing="false" text="Manage reservables">
                            <items>
                                <MenuItem onAction="#goToAddRooms" text="Add a room" />
                                <MenuItem mnemonicParsing="false" text="Add a bike" />
                                <MenuItem text="Edit reservables" />
                            </items>
                        </Menu>
                        <Menu id="inactiveMenu" mnemonicParsing="false" text="                                                                     ">
                        </Menu>
                        <Menu mnemonicParsing="false" text="more..">
                            <items>
                                <MenuItem onAction="#goToLogIn" text="Log out" />
                                <MenuItem mnemonicParsing="false" text="Copyrights" />
