                            <font>
                                <Font name="Helvetica" size="14.0" />
                            </font>
                        </Label>
                        <CheckBox fx:id="roomForEmployee" layoutX="591.0" layoutY="223.0" mnemonicParsing="false" AnchorPane.leftAnchor="591.0" AnchorPane.topAnchor="223.0" />
                        <Label layoutX="481.0" layoutY="259.0" text="Image" AnchorPane.leftAnchor="481.0" AnchorPane.topAnchor="259.0">
