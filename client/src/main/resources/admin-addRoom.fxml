                        <Label layoutX="30.0" layoutY="30.0" text="Details" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="220.0">
                            <font>
                                <Font name="Helvetica" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="roomDescriptionInput" layoutX="20.0" layoutY="20.0" prefHeight="70.0" prefWidth="400.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="240.0" />
                        <Label layoutX="482.0" layoutY="146.0" text="Capacity" AnchorPane.leftAnchor="482.0" AnchorPane.topAnchor="146.0">
