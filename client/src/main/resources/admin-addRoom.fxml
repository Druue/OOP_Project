                <ImageView fitWidth="800" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <image>
                        <Image url="@images/Rooms-background8x6.png" />
                    </image>
                </ImageView>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
                    <children>
                        <Box depth="0.0" height="420.0" layoutX="402.0" layoutY="210.0" width="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="-2.0" AnchorPane.topAnchor="0.0" />
                        <Label text="Add a new room" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="75.0" AnchorPane.topAnchor="20.0">
                            <font>
                                <Font name="Helvetica" size="27.0" />
                            </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="10.0" text="Room ID" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="80.0">
                            <font>
                                <Font name="Helvetica" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="roomIdInput" prefHeight="30.0" prefWidth="400.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="100.0" />
                        <Label layoutX="20.0" layoutY="20.0" text="Name" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="150.0">
