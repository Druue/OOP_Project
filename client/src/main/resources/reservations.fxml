<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox fx:id="mainPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.client.controllers.ReservationsSceneController">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="1080.0" StackPane.alignment="TOP_CENTER">
          <items>
              <Button alignment="TOP_CENTER" mnemonicParsing="false" text="Add Test Building" onAction="#addTestBuilding"/>
       </items>
      </ToolBar>
      <StackPane>
         <children>
             <ImageView fitWidth="1080" preserveRatio="true">
                 <image>
                     <Image url="@images/Rooms-background.png" />
                 </image>
             </ImageView>
             <FlowPane alignment="CENTER_LEFT">
                 <children>
                     <VBox id="buildingNDateWrapper" alignment="CENTER" maxWidth="350" spacing="20.0" StackPane.alignment="CENTER_LEFT">
                         <children>
                             <GridPane alignment="CENTER_LEFT">
                                <children>
                                    <Label text="Date: " GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
                                 <font>
                                    <Font name="FreeSans" size="18.0" />
                                 </font></Label>
                                    <ChoiceBox fx:id="datesList" GridPane.columnIndex="1" GridPane.halignment="CENTER">
                                 <GridPane.margin>
                                    <Insets bottom="10.0" />
                                 </GridPane.margin></ChoiceBox>
                                    <Label text="Building: " GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                                 <font>
                                    <Font name="FreeSans" size="18.0" />
                                 </font></Label>
                                </children>
                           <columnConstraints>
                              <ColumnConstraints />
                              <ColumnConstraints />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints />
                              <RowConstraints />
                           </rowConstraints>
                             </GridPane>
                             <TextField fx:id="buildingSearchField" alignment="CENTER" maxHeight="15.0" maxWidth="260.0" prefHeight="15" prefWidth="260" />
                             <ScrollPane id="buildingsListWrapper" styleClass="scroll-pane" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="300.0">
                                 <content>
                                     <VBox id="buildingsList" fx:id="buildingsList" alignment="CENTER">
                                     </VBox>
                                 </content>
                             </ScrollPane>
                             <Button id="buildingsCancelButton" alignment="CENTER" onAction="#goToHomepage" prefHeight="50" prefWidth="150" text="Cancel"/>
                         </children>
                         <FlowPane.margin>
                             <Insets left="50.0" />
                         </FlowPane.margin>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     </VBox>
                     <TabPane fx:id="roomsListWrapper">
                         <Tab fx:id="roomsListTab"/>
                     </TabPane>

                 </children>
             </FlowPane>
         </children>
       </StackPane>
   </children>
</VBox>
