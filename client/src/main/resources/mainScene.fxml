<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.demo.controllers.MainSceneController">

    <!-- Button that calls the buttonPing() function in MainSceneController.java -->
    <Button onAction="#buttonPing" text="Send a ping" />


    <Text text="Send some info, and get it relayed back" />
    <!-- Text field called 'userInput' -->
    <TextField fx:id="userInput" />
    <!-- Button that sends the text within 'userInput'-->
    <Button onAction="#testPostRequest" text="Send information" />
    <Button onAction="#goToReservations" text="Go to reservations" />

    <Button onAction="#goToLogin" text="Go to the login page" />

    <Button onAction="#goToHome" text="Go to the homepage" />
</VBox>
